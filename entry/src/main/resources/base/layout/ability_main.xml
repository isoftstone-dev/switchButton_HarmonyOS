                app:SwitchButton_kswTextOn = "ON"
                app:SwitchButton_kswTextOff = "OFF"
                ohos:layout_alignment="left"/>

            <com.isoftstone.switchbutton.SwitchButton
                ohos:id="$+id:switchButton3_focus_open_control"
                ohos:right_margin="50px"
                ohos:height="30vp"
                ohos:width="60vp"
                app:SwitchButton_ThumbDrawable_on = "$graphic:button_thumb_on"
                app:SwitchButton_ThumbDrawable_off = "$graphic:button_thumb_off"
